{
	"schemaVersion": 1,
	"id": "cmofl",
	"version": "${version}",
	"name": "Configurable Mute On Focus Lost",
	"description": "Allow to specify which categories in Music & Sounds to mute or otherwise change the volume when the Minecraft window loses focus",
	"authors": [
		"Rei"
	],
	"license": "MIT",
    "contact": {
        "homepage": "https://github.com/ReiDaTecnologia/cmofl",
        "sources": "https://github.com/ReiDaTecnologia/cmofl",
        "issues": "https://github.com/ReiDaTecnologia/cmofl/issues"
    },
	"icon": "assets/cmofl/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			"rei.cmofl.ConfigurableMuteOnFocusLost"
		],
        "modmenu": [
          "rei.cmofl.config.ModMenu"
        ]
	},
	"depends": {
		"fabricloader": ">=0.17.2",
		"minecraft": "~1.21.4",
		"java": ">=21",
		"fabric-api": "*"
	},
    "suggests": {
        "modmenu": ">=13.0.3",
        "cloth-config": ">=17.0.144"
    }
}